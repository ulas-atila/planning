{% extends 'base.html.twig' %}

{% block content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">Identification</div>
                    <div class="panel-body">
                        <form action="{{ path('homepage') }}" method="post">
                            <label for="username" style="display:inline-block;width:150px;">Adresse e-mail:</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" /><br/>

                            <label for="password" style="display:inline-block;width:150px;">Mot de passe:</label>
                            <input type="password" id="password" name="_password" /><br/>

                            {#
                                If you want to control the URL the user
                                is redirected to on success (more details below)
                                <input type="hidden" name="_target_path" value="/account" />
                            #}

                            <button type="submit">Valider</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}