{% extends 'admin/base.html.twig' %}

{% block content %}
    <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">Editer une facture</div>
                    <div class="panel-body">
                        <form class="form-horizontal" action="" method="post">
                            <fieldset>
                                <div class="form-group">
                                    <label class="col-md-3 control-label" for="name">Livreur</label>
                                    <div class="col-md-9">
                                        <select name="id_livreur">
                                            {% for livreur in livreurs %}
                                            <option value="{{ livreur.id }}">{{ livreur.prenom ~" "~ livreur.nom }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                            
                                

                                <div class="form-group">
                                    <label class="col-md-3 control-label" for="name">Intitulé</label>
                                    <div class="col-md-9">
                                        <input name="siret" type="text" placeholder="Intitulé de la facture" class="form-control">
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label class="col-md-3 control-label" for="name">Montant</label>
                                    <div class="col-md-9">
                                        <input name="rib" type="text" placeholder="Montant en euros" class="form-control">
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label class="col-md-3 control-label" for="name">Facture payée ?</label>
                                    <div class="col-md-9">
                                        <input type="radio" name="gender" value="false" checked> NON
                                        <input type="radio" name="gender" value="true"> OUI<br>
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <div class="col-md-12 widget-right">
                                        <button type="submit" class="btn btn-default btn-md pull-right">Editer la facture
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div><!--/.row-->  
{% endblock %}
