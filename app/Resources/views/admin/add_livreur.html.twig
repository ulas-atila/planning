{% extends 'admin/base.html.twig' %}

{% block content %}
    <div class="row">
			<div class="col-lg-12">
				<div class="panel panel-default">
					<div class="panel-heading">Ajout d'un nouveau livreur</div>
					<div class="panel-body">
						<form class="form-horizontal" action="" method="post">
							<fieldset>
								<div class="form-group">
									<label class="col-md-3 control-label" for="name">Nom</label>
									<div class="col-md-9">
										<input name="nom" type="text" placeholder="Nom du livreur" class="form-control">
									</div>
								</div>
							
								<div class="form-group">
									<label class="col-md-3 control-label" for="name">Prénom</label>
									<div class="col-md-9">
										<input name="prenom" type="text" placeholder="Prénom du livreur" class="form-control">
									</div>
								</div>
							
								<div class="form-group">
									<label class="col-md-3 control-label" for="email">E-mail</label>
									<div class="col-md-9">
										<input  name="email" type="text" placeholder="E-mail du livreur" class="form-control">
									</div>
								</div>
								
								<div class="form-group">
									<label class="col-md-3 control-label" for="message">Adresse postale</label>
									<div class="col-md-9">
										<input name="adresse" type="text" placeholder="Adresse postale du livreur" class="form-control">
									</div>
								</div>
								
								<div class="form-group">
									<label class="col-md-3 control-label" for="name">Téléphone</label>
									<div class="col-md-9">
										<input name="telephone" type="text" placeholder="Numéro de téléphone" class="form-control">
									</div>
								</div>

								<div class="form-group">
									<label class="col-md-3 control-label" for="name">Ville de livraison</label>
									<div class="col-md-9">
										<input name="ville" type="text" placeholder="Ville de livraison" class="form-control">
									</div>
								</div>

								<div class="form-group">
									<label class="col-md-3 control-label" for="name">SIRET</label>
									<div class="col-md-9">
										<input name="siret" type="text" placeholder="SIRET" class="form-control">
									</div>
								</div>
								
								<div class="form-group">
									<label class="col-md-3 control-label" for="name">RIB</label>
									<div class="col-md-9">
										<input name="rib" type="text" placeholder="RIB" class="form-control">
									</div>
								</div>
								
								<div class="form-group">
									<label class="col-md-3 control-label" for="name">Photo du livreur</label>
									<div class="col-md-9">
										<input type="file" name="photo">
									</div>
								</div>
								
								<div class="form-group">
									<div class="col-md-12 widget-right">
										<button type="submit" class="btn btn-default btn-md pull-right">Ajouter</button>
									</div>
								</div>
							</fieldset>
						</form>
					</div>
				</div>
			</div>
		</div><!--/.row-->	
{% endblock %}
